@model Events4All.Web.Models.CheckInsViewModel

<h2>CheckIn</h2>

<br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <div class="form-group row">
        @Html.LabelFor(model => model.RawBarcode, htmlAttributes: new { @class = "control-label col-md-2" })
        <div>
            @Html.EditorFor(model => model.RawBarcode, new { htmlAttributes = new { @class = "form-control col-md-6", id = "barcode", style = "margin-right: 5px; margin-bottom: 10px;" } })
        </div>
        <input id="colormsg" class="col-lg-6 form-control hidden">
    </div>

    <div class="form-group row">
        <div>
            <input type="submit" value="Check In" class="btn btn-primary media-middle col-md-6 col-md-offset-2" id="checkin" />
        </div>
        
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div id="lastbarcode"></div>
    </div>
</div>
    }

    @section Scripts {
        @Scripts.Render("~/Scripts/ParseBarcode.js")

    }

